<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:orientation="vertical">

    <include layout="@layout/page_header2"/>

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center"
        android:padding="@dimen/dp_10"
        android:src="@drawable/prof_pic" />

    <TextView

        android:id="@+id/ctv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_3"
        android:paddingTop="@dimen/dp_5"
        android:text="ANV"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_16" />


    <LinearLayout
        android:id="@+id/ll_blood_g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="Blood Group "
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/ctv_blood_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="AB+"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/ctv_km_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:text="5km"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_13"/>

    <TextView
        android:id="@+id/ctv_sector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:drawableLeft="@drawable/location"
        android:drawablePadding="@dimen/dp_15"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="abcd"
        android:textColor="@color/input_login"
        android:textSize="@dimen/sp_14"/>

    <FrameLayout
        android:id="@+id/child_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_weight="1"
            android:autoLink="phone"
            android:drawableLeft="@drawable/call_icn"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="left"
            android:padding="@dimen/dp_10"
            android:text="+123456789"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/img_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginRight="@dimen/dp_15"
            android:clickable="true"
            android:gravity="center"
            android:src="@drawable/call" />
    </LinearLayout>
</LinearLayout>